<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Gradient Colors -->
            <gradient
                android:angle="270"
                android:startColor="#0F0F1D"
                android:endColor="#444483"
                android:type="linear" />

            <!-- Rounded Corners -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
