<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    tools:context="com.vibetune.musicplayer.LoginActivity">

    <TextView
        android:id="@+id/judulText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="194dp" />
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/judulText1"
        android:layout_marginTop="10dp"
        >
        
        <TextView
            android:id="@+id/judulText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vibe Tune"
            android:textSize="35sp"
            android:fontFamily="@font/poppins_bold"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            />
        
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo aplikasi" />



    </LinearLayout>

    
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:fontFamily="@font/poppins_light"
        android:background="@drawable/border"
        android:hint="Email or Username"
        android:inputType="textEmailAddress"
        android:layout_below="@id/linearlayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:fontFamily="@font/poppins_light"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@id/emailEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/forgotText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_light"
        android:layout_below="@id/passwordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/loginButton2"
        android:layout_width="305dp"
        android:layout_height="55dp"
        android:backgroundTint="#404C6C"
        android:text="LOGIN"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:layout_below="@id/forgotText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/regisText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not have an account? Register"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_light"
        android:textColor="#FFFFFF"
        android:layout_below="@id/loginButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="14dp"
        android:clickable="true" />

</RelativeLayout>
